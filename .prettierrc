{
  "printWidth": 80,

  "tabWidth": 2,

  "useTabs": false,

  "semi": true,

  "singleQuote": true,

  "trailingComma": "es5",

  "bracketSpacing": true,

  "bracketSameLine": false,

  "arrowParens": "always",

  "endOfLine": "lf",

  "jsxSingleQuote": false,

  "embeddedLanguageFormatting": "auto",

  "requirePragma": false,
  "insertPragma": false,

  "proseWrap": "preserve",

  "overrides": [
    {
      "files": "*.md",
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
